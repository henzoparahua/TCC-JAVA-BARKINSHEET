<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import com.helpfox.main.core.components.layout.DrawerLayout?>
<?import com.helpfox.main.core.framework.Toolbar?>
<?import com.helpfox.main.core.components.layout.SlidingTabLayout?>
<?import com.helpfox.main.core.components.layout.ViewPager?>

<DrawerLayout xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600" fx:id="drawer">
    <content>
        <VBox  spacing="8" alignment="TOP_CENTER">
            <Toolbar fx:id="toolbar">
                <SlidingTabLayout fx:id="tabLayout" />
            </Toolbar>
            <ViewPager fx:id="viewPager" VBox.vgrow="ALWAYS"/>
        </VBox>
    </content>
    <nav>
        <VBox style="-fx-background-color: white;">
            <Label text="This is the nav"/>
        </VBox>
    </nav>


</DrawerLayout>