<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.helpfox.main.core.manager.Fragment?>

<?import com.helpfox.main.core.components.component.TextInputLayout?>
<?import com.helpfox.main.core.components.component.ImageButton?>
<fx:root xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8" type="Fragment">
    <StackPane fx:id="content" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0">
        <VBox style="-fx-padding:16px">
            <HBox fx:id="header_container" alignment="CENTER_LEFT" spacing="150">
                    <Label text="Motoristas" styleClass="header" style="-fx-font-size:24px;"/>
                <HBox alignment="CENTER_RIGHT" spacing="70">
                <TextInputLayout animated="false" prefWidth="320">
                    <TextField  fx:id="search_field" promptText="Pesquisar" >
                    </TextField>
                </TextInputLayout>
                    <ImageButton fx:id="btn_add_driver">
                    </ImageButton>
                </HBox>
            </HBox>
            <TableView fx:id="tblDriver" styleClass="mfx-table-view" editable="true" layoutX="9.0" layoutY="16.0"
                       onMouseClicked="#getSelectedItem" prefHeight="244.0" prefWidth="980.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="colSelect" minWidth="40" maxWidth="40" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colName" minWidth="90" maxWidth="360" text="Nome"/>
                    <TableColumn fx:id="colRG" minWidth="100" maxWidth="120" text="RG"/>
                    <TableColumn fx:id="colPhone" minWidth="130" maxWidth="130" text="Telefone"/>
                    <TableColumn fx:id="colAction" minWidth="330"/>
                </columns>
            </TableView>
        </VBox>
    </StackPane>
</fx:root>
